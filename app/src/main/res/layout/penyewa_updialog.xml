<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/upd_namaPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="nama Penyewa" />

        <EditText
            android:id="@+id/upd_alamatPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="alamat Penyewa" />

        <EditText
            android:id="@+id/upd_noHPPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="No HP penyewa" />
        <EditText
            android:id="@+id/upd_pekerjaanPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Pekerjaan Penyewa" />
        <EditText
            android:id="@+id/upd_emailPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Email Penyewa" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner_Status"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Status Kamar"
            android:contentDescription="Status Kamar">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/upd_statusPenyewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="Status Penyewa"
                tools:ignore="KeyboardInaccessibleWidget" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/update_Penyewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="32sp"
            android:layout_marginRight="32sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:text="Update"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>